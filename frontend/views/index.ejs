<!-- views/index.ejs -->
<%- include('partials/header') %>

<div class="container py-5">
    <% if (error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <% if (locals.user) { %>
        <!-- Logged in view -->
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h1 class="display-4 mb-4">Welcome Back, <%= user.username %>!</h1>
                <p class="lead mb-4">Access the ontology query system or view your dashboard below.</p>

                <div class="row mt-5">
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title">Ontology Query</h3>
                                <p class="card-text">Explore and query the ontology database with our advanced query interface.</p>
                                <a href="/onto/query" class="btn btn-primary">Start Querying</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title">Dashboard</h3>
                                <p class="card-text">View your account dashboard and manage your settings.</p>
                                <a href="/dashboard" class="btn btn-secondary">Go to Dashboard</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <!-- Not logged in view -->
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h1 class="display-4 mb-4">Welcome to Ontology Query System</h1>
                <p class="lead mb-4">Access our powerful ontology query system by logging in or creating a new account.</p>

                <div class="row mt-5">
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title">Login</h3>
                                <p class="card-text">Already have an account? Log in to access the query system.</p>
                                <a href="/auth/login" class="btn btn-primary">Login</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title">Register</h3>
                                <p class="card-text">New to the system? Create an account to get started.</p>
                                <a href="/auth/register" class="btn btn-secondary">Register</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>