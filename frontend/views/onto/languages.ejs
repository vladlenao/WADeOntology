<%- include('../partials/header') %>

<div class="container-fluid py-4">
    <div class="row">
        <!-- Language List Sidebar -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Programming Languages</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <% languages.forEach(function(lang) { %>
                            <a href="/onto/language/<%= lang %>"
                               class="list-group-item list-group-item-action">
                                <%= lang %>
                            </a>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Select a Language</h4>
                </div>
                <div class="card-body">
                    <p class="lead">
                        Please select a programming language from the list on the left to view its details.
                    </p>
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>